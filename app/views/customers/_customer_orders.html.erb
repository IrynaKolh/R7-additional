<% if @customer.orders.any? %>
  <h3>Orders for <%= @customer.full_name %></h3>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Product Count</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @customer.orders.each do |order| %>
        <tr>
          <td><%= order.product_name %></td>
          <td><%= order.product_count %></td>
          <td><%= link_to 'Show', order_path(order), class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-primary" %></td>
          <td>
          <%= button_to "Delete", order, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "btn btn-danger" %>
          </td>
        </tr>       
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>This customer has no orders.</p>
<% end %>